
#include <iostream>
using namespace std;
struct node{
    int data;
    node* next;
    
    node(int value){
        data=value;
        next=nullptr;
        
    }
};
void Print(node* head){
    node* p=head;
    
    while(p!=nullptr){
        cout<<p->data<<" ";
        p=p->next;
    }
}
void insertionInLL(node* head,int pos,int val){
    node* p=head;
    node* q=nullptr;
    
    
    for(int i=1;i<pos;i++){
        q=p;
        p=p->next;
    }
    node* r=new node(val);
    r->next=p;
    q->next=r;
    
}
int main()
{
    node* head=new node(2);
    head->next=new node(3);
    head->next->next=new node(5);
    head->next->next->next=new node(1);
    
    int pos=3;
    int value=8;
    
    insertionInLL(head,pos,value);
    Print(head);
    //insertionInLL(pos,value,head);
    return 0;
}
