
#include <iostream>
using namespace std;

class Student{
    public:
    string name;
    int age;
    bool scholarship;
    
    void display(){
        cout<<"Name: "<<name<<endl;
        cout<<"Age: "<<age<<endl;
        // cout<<"Scholarship status: "<<scholarship<<endl;
    }
};
int main()
{
    Student s1;
    s1.name="Priya_Rana";
    s1.age=18;
    s1.scholarship=true;
    
    
    s1.display();
    if(s1.scholarship==true){
        cout<<"Scholarship Status: "<<"Availed";
    }
    else{
        cout<<"Scholarship Status: "<<"Not Availed";
    }   
    return 0;
}
